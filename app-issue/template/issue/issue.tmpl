{{ define "issuesTable" }}
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Priority</th>
    </tr>
  </thead>
  <tbody>
    {{ range . }}
    <tr>
      <td>
        <a href="{{ urlPrefixIssue }}/issues/{{ .Id }}">{{ .Title }}</a>
      </td>
      <td>{{ .Description }}</td>
      <td>{{ .PriorityName }}</td>
    </tr>
    {{ end }}
  </tbody>
</table>
{{ end }}
