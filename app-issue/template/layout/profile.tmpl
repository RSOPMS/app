{{ define "profilePage" }}
  {{ template "top" }}
  <h1>User Profile</h1>
  <div style="display: flex; align-items: center;">
    <div>
      <img src="data:image/svg+xml;base64,{{ .AvatarSVG }}" alt="User Avatar" style="width: 100px; height: 100px; margin-right: 20px;">
    </div>
    <div>
      <p>Name: {{ .Name }}</p>
      <p>Surname: {{ .Surname }}</p>
      <p>Role: {{ .Role }}</p>
      <p>Email: {{ .Email }}</p>
    </div>
  </div>
  {{ template "bot" }}
{{ end }}