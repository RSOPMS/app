{{ define "issues" }}
  {{ template "top" }}
  <h1>{{ .Title }}</h1>
  <p>{{ .Description }}</p>
  <div hx-get="/issue/api/projects/{{ .ProjectId }}/issues/{{ .Id }}/comments/"
       hx-trigger="load"
       hx-swap="outerHTML">
  </div>
  {{ template "bot" }}
{{ end }}

{{ define "issue" }}
<h1>{{ .Title }}</h1>
<div hx-get="/issue/api/issues/{{ .Id }}/comments/table/"
     hx-trigger="load"
     hx-swap="outerHTML">
</div>
{{ end }}